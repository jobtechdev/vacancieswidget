(function($, window) {

    $(window).load(function() {

        // Enable slider
        var slider = $('.slider');
        if (slider.length != 0) {
            slider.slider({
                autoplay: slider.attr('data-autostart') === 'true',
                interval: slider.attr('data-interval'),
                width: 678,
                height: 350
            });
        }

        $(".top-right-menu li").last().addClass("last-menu-item");

        $("li.top-menus-icons").last().children().last().css("margin-right", "-4px");        

        $('#tabs ul.tabs-list').easyMenu();
        LinkTarget();

        var panel = $('.background');
        var image = panel.attr('data-src');
        if (image != '')
            panel.attr('src', image);

    });

    function LinkTarget() {
        $("a[rel='external']").click(function() {
            var oUrl = $(this).attr("href");
            window.open(oUrl);
            return false;
        });
    }

})(jQuery, window);